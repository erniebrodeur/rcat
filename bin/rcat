#!/usr/bin/ruby
require 'bini/app'
require 'bini/optparser'
require 'pry'
require 'pry-theme'

include Bini

App.banner = "Usage: Use ruby to cat a file and produce colored output."
App.version = "0.9.1"

Options.parse!

if ARGV.empty?
  puts 'you need to supply a list of filenames to cat to screen.'
else
	PryTheme.set_theme 'monokai'
  ARGV.each do |f|
    if File.exist? f
      puts Pry::Code.from_file(f).to_s
    else
      puts "No such file: #{f}"
    end
  end
end
